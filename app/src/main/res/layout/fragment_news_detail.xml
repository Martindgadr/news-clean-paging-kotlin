<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <ImageView
            android:layout_width="0dp"
            android:layout_height="240dp"
            app:srcCompat="@drawable/ic_photo_black_24dp"
            android:id="@+id/newsImageView"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

    <TextView
            tools:text="Title of news to be showed"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:paddingStart="8dp"
            android:paddingEnd="8dp"
            android:id="@+id/titleText"
            android:textColor="@color/whiteText"
            android:lines="2"
            android:textSize="18sp"
            android:ellipsize="end"
            android:textStyle="bold"
            android:background="@drawable/smoth_black_backgound"
            app:layout_constraintBottom_toBottomOf="@+id/newsImageView"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            />

    <TextView
            tools:text="@string/textDetails"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:id="@+id/descriptionText"
            android:textColor="@color/greyText"
            android:textSize="16sp"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="16dp"
            app:layout_constraintTop_toBottomOf="@+id/newsImageView"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="16dp"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toTopOf="@+id/textView"/>

    <TextView
            android:text="@string/author"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView"
            android:textColor="@color/greyText"
            android:textSize="16sp"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp"
            android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toTopOf="@+id/textView3"/>

    <TextView
            android:text="@string/linkNews"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/authorName"
            android:textColor="@color/greyText"
            android:textSize="16sp"
            app:layout_constraintStart_toEndOf="@+id/textView"
            android:layout_marginStart="8dp"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp"
            app:layout_constraintTop_toTopOf="@+id/textView"
            app:layout_constraintBottom_toBottomOf="@+id/textView"/>

    <TextView
            android:text="@string/linkNews"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView3"
            android:textColor="@color/greyText"
            android:textSize="16sp"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="@+id/textView"
            app:layout_constraintEnd_toEndOf="@+id/textView"
            android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="parent"/>

    <TextView
            android:text="@string/linkNews"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/linkWeb"
            android:textColor="@color/greyText"
            android:textSize="16sp"
            android:lines="1"
            android:ellipsize="end"
            app:layout_constraintEnd_toEndOf="@+id/authorName"
            app:layout_constraintStart_toStartOf="@+id/authorName"
            app:layout_constraintTop_toTopOf="@+id/textView3"
            app:layout_constraintBottom_toBottomOf="@+id/textView3"/>

</androidx.constraintlayout.widget.ConstraintLayout>